{
  "name": "pregnancy-assistant-backend",
  "version": "1.0.0",
  "description": "Backend API proxy for Pregnancy Assistant app",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "dev:watch": "NODE_ENV=development nodemon --watch . --ext js,json server.js",
    "stop": "pkill -f 'node server.js' || pkill -f 'nodemon' || true",
    "restart": "npm run stop && npm run dev",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "deploy:db": "node scripts/deploy-database.js",
    "test:db": "node scripts/test-connection.js",
    "test:auth": "node test-auth-setup.js",
    "test:backend": "node test-backend-simple.js",
    "test:cleanup": "node test-auth-setup.js --cleanup",
    "test:flutter-replica": "node test-flutter-replica.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "@prisma/client": "^6.17.1",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "prisma": "^6.17.1",
    "qrcode": "^1.5.4",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "pregnancy",
    "assistant",
    "api",
    "proxy"
  ],
  "author": "",
  "license": "MIT"
}
