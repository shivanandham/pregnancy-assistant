# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Firebase Configuration (Development)
FIREBASE_PROJECT_ID_DEV=luma-pregnancy-assistant-dev
FIREBASE_PRIVATE_KEY_DEV="-----BEGIN PRIVATE KEY-----\nyour_dev_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL_DEV=your_dev_firebase_client_email

# Firebase Configuration (Production)
FIREBASE_PROJECT_ID_PROD=luma-pregnancy-assistant-prod
FIREBASE_PRIVATE_KEY_PROD="-----BEGIN PRIVATE KEY-----\nyour_prod_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL_PROD=your_prod_firebase_client_email

# Server Configuration
PORT=3000
NODE_ENV=development

# PostgreSQL Database Configuration
# Prisma automatically reads DATABASE_URL from .env file
# Format: postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE_NAME
# Development example:
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pregnancy_assistant
# Production example (on droplet):
# DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/pregnancy_assistant

# Session Token Configuration
JWT_SECRET=your_strong_secret_key_here_change_in_production
JWT_EXPIRES_IN=30d
JWT_REFRESH_EXPIRES_IN=90d
